generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Word {
  id          String   @id @default(uuid())
  word        String   @unique
  etymology   Json?    // LLM 분석 결과 캐시
  derivatives String[] // 파생어 목록
  synonyms    Json?    // 유사어 + 비교
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  sessions SessionWord[]

  @@map("words")
}

model Session {
  id        String   @id @default(uuid())
  name      String?
  createdAt DateTime @default(now()) @map("created_at")
  expiresAt DateTime @map("expires_at")

  words SessionWord[]

  @@map("sessions")
}

model SessionWord {
  id        String  @id @default(uuid())
  sessionId String  @map("session_id")
  wordId    String  @map("word_id")
  order     Int     // 탐색 순서
  parentId  String? @map("parent_id") // 어디서 파생되어 왔는지

  session  Session      @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  word     Word         @relation(fields: [wordId], references: [id])
  parent   SessionWord? @relation("WordDerivation", fields: [parentId], references: [id])
  children SessionWord[] @relation("WordDerivation")

  @@map("session_words")
}

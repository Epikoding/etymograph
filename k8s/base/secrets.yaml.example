apiVersion: v1
kind: Secret
metadata:
  name: etymograph-secrets
  namespace: etymograph
type: Opaque
stringData:
  # PostgreSQL
  POSTGRES_USER: etymograph
  POSTGRES_PASSWORD: "CHANGE_ME_POSTGRES_PASSWORD"
  POSTGRES_DB: etymograph
  DATABASE_URL: "postgresql://etymograph:CHANGE_ME_POSTGRES_PASSWORD@postgres:5432/etymograph"

  # LLM Configuration
  LLM_PROVIDER: "gemini"
  GEMINI_API_KEY: "CHANGE_ME_GEMINI_API_KEY"
  GEMINI_MODEL: "gemini-2.0-flash"
